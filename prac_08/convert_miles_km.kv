BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            size_hint_x: 0.8
            font_size: 40
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                font_size: 35
            Button:
                text: 'Down'
                font_size: 35
    Button:
        text: 'Convert miles to km'
        font_size: 35
        on_press: app.handle_calculate()
    Label:
        text: app.output_distance # bind output_distance property to label, making it react to "real-time" changes
        color: (1,1,0,1)
        font_size: 50